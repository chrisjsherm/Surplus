<div class="row">
    <div class="col-xs-12">
        <label>@Html.DisplayNameFor(model => model.Description)</label>
        <span>@Html.DisplayFor(model => model.Description)</span>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <label>@Html.DisplayNameFor(model => model.VTBarcode)</label>
        <span>@Html.DisplayFor(model => model.VTBarcode)</span>
    </div>
</div>

<div class="row">
    <div class="col-xs-4">
        <label>@Html.DisplayNameFor(model => model.Manufacturer)</label>
        <span>@Html.DisplayFor(model => model.Manufacturer)</span>
    </div>

    <div class="col-xs-4">
        <label>@Html.DisplayNameFor(model => model.Model)</label>
        <span>@Html.DisplayFor(model => model.Model)</span>
    </div>

    <div class="col-xs-4">
        <label>@Html.DisplayNameFor(model => model.Quantity)</label>
        <span>@Html.DisplayFor(model => model.Quantity) (@Html.DisplayFor(model => model.QuantityDescription.Name))</span>
    </div>
</div>

<div class="row">
    <div class="col-xs-3">
        <label>@Html.DisplayNameFor(model => model.SerialNumber)</label>
        <span>@Html.DisplayFor(model => model.SerialNumber)</span>
    </div>

    <div class="col-xs-3">
        <label>@Html.DisplayNameFor(model => model.EstimatedValue)</label>
        <span>@Html.DisplayFor(model => model.EstimatedValue)</span>
    </div>

